{
  "scopeName": "source.lyric",
  "name": "Lyric",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#blockclose" },
    { "include": "#constants" },
    { "include": "#modifiers" },
    { "include": "#based_on" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],

  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "#",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment" } },
          "end": "$",
          "name": "comment.line.number-sign"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double",
          "patterns": [
            { "match": "\\\\.", "name": "constant.character.escape" }
          ]
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single",
          "patterns": [
            { "match": "\\\\.", "name": "constant.character.escape" }
          ]
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b",
          "name": "constant.numeric"
        }
      ]
    },

    "blockclose": {
      "patterns": [
        {
          "comment": "+++ only when used alone on its own line to close class",
          "match": "^\\s*\\+\\+\\+\\s*$",
          "name": "storage.type"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "comment": "Boolean and None literals (all forms recognized by the lexer)",
          "match": "\\b(true|false|True|False|None)\\b",
          "name": "constant.language"
        }
      ]
    },

    "modifiers": {
      "patterns": [
        {
          "comment": "Access modifiers (lexer.KEYWORDS)",
          "match": "\\b(public|private|protected)\\b",
          "name": "storage.modifier"
        }
      ]
    },

    "based_on": {
      "patterns": [
        {
          "comment": "Inheritance keyword - parsed as two IDENT tokens by the parser",
          "match": "\\bbased\\s+on\\b",
          "name": "keyword.control"
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "comment": "Control-flow keywords (confirmed in lexer.KEYWORDS)",
          "match": "\\b(if|elif|else|case|given|for|done|end|try|catch|finally|fade|raise|import|importpy|break|continue|return|as|in|and|or|not)\\b",
          "name": "keyword.control"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "comment": "Type keywords (confirmed in lexer TYPE_OR_IDENT and parser valid_types)",
          "match": "\\b(def|class|var|god|bin|int|flt|str|rex|pyobject|arr|map|obj|dsk)\\b",
          "name": "storage.type"
        }
      ]
    },

    "builtins": {
      "patterns": [
        {
          "comment": "Built-in functions (confirmed referenced by parser or spec)",
          "match": "\\b(print|input|range|open|type|isinstance|regex|exec|getopts)\\b",
          "name": "support.function.builtin"
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "comment": "File I/O operators (lexer: FILE_APPEND, FILE_WRITE, FILE_READ)",
          "match": "->>|->|<-",
          "name": "keyword.operator"
        },
        {
          "comment": "Shell chain operators (lexer: AND, OR, PIPE)",
          "match": "&&|\\|\\||\\|",
          "name": "keyword.operator"
        },
        {
          "comment": "Comparison operators",
          "match": "(==|!=|<=|>=|<|>)",
          "name": "keyword.operator"
        },
        {
          "comment": "Arithmetic and assignment operators",
          "match": "[+\\-*/%=]",
          "name": "keyword.operator"
        }
      ]
    },

    "punctuation": {
      "patterns": [
        {
          "match": "[\\[\\]\\(\\)\\{\\},\\.:]",
          "name": "punctuation.separator"
        }
      ]
    }
  }
}
