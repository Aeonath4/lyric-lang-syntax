{
  "scopeName": "source.lyric",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#control" },
    { "include": "#keywords" },
    { "include": "#logical" },
    { "include": "#literals" },
    { "include": "#regex" },
    { "include": "#numbers" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#symbols" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "match": "\\b(def|class|var|god|bin|int|flt|str|rex|pyobject|None|return)\\b",
          "name": "keyword.declaration.lyric"
        }
      ]
    },
    "control": {
      "patterns": [
        {
          "name": "meta.conditional-block.lyric",
          "begin": "\\b(if)\\b(?!\\s*\\w)(?<!else\\s)",
          "end": "\\b(end)\\b",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.if.lyric"
            }
          },
          "endCaptures": {
            "1": {
              "name": "keyword.control.flow.lyric"
            }
          },
          "patterns": [
            {
              "match": "\\belse\\s+if\\b",
              "name": "keyword.control.else-if.lyric"
            },
            {
              "match": "\\belif\\b",
              "name": "keyword.control.elif.lyric"
            },
            {
              "match": "\\belse\\b",
              "name": "keyword.control.else.lyric"
            }
          ]
        },
        {
          "match": "\\b(given|for|done|try|catch|finally|raise|importpy|break|continue)\\b",
          "name": "keyword.control.flow.lyric"
        }
      ]
    },
    "logical": {
      "patterns": [
        {
          "match": "\\b(and|or|not|in|as)\\b",
          "name": "keyword.operator.logical.lyric"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "match": "\\b(true|false|True|False)\\b",
          "name": "constant.language.boolean.lyric"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "match": "#.*$",
          "name": "comment.line.number-sign.lyric",
          "applyEndPatternLast": true,
          "contentName": "comment.content.lyric"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.lyric"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.lyric"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b",
          "name": "constant.numeric.lyric"
        }
      ]
    },
    "regex": {
      "patterns": [
        {
          "begin": "\\bregex\\s*\\(",
          "end": "\\)",
          "name": "support.function.builtin.lyric",
          "patterns": [
            {
              "begin": "\"",
              "end": "\"",
              "name": "string.regex.lyric",
              "patterns": [
                {
                  "match": "\\\\.",
                  "name": "constant.character.escape.lyric"
                }
              ]
            },
            {
              "begin": "'",
              "end": "'",
              "name": "string.regex.lyric",
              "patterns": [
                {
                  "match": "\\\\.",
                  "name": "constant.character.escape.lyric"
                }
              ]
            }
          ]
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "match": "\\b(print|input|int|float|str|len|range|type|isinstance|open|regex|append|keys|values)\\b",
          "name": "support.function.builtin.lyric"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "[+\\-*/%=<>!]=",
          "name": "keyword.operator.assignment.lyric"
        },
        {
          "match": "[+\\-*/%<>!]",
          "name": "keyword.operator.lyric"
        },
        {
          "match": "[&|]{1,2}",
          "name": "keyword.operator.logical.lyric"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "match": "\\+\\+\\+",
          "name": "keyword.other.special-method.lyric"
        },
        {
          "match": "\\b(self)\\b",
          "name": "variable.language.special.lyric"
        }
      ]
    }
  }
}
